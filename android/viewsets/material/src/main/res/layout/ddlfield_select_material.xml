<?xml version="1.0" encoding="utf-8"?>
<com.liferay.mobile.screens.viewsets.defaultviews.ddl.form.fields.DDLFieldSelectView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:padding="10dp"
	>

	<TextView
		android:id="@+id/liferay_ddl_label"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:visibility="gone"
		/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		>

		<EditText
			android:id="@+id/liferay_ddl_edit_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignBottom="@+id/field_today"
			android:layout_toLeftOf="@+id/field_today"
			android:hint="@string/hint_select"
			android:inputType="date"
			/>


		<ImageView
			android:id="@+id/field_today"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:paddingBottom="3dp"
			android:src="@drawable/material_tinted_launch"
			/>

	</RelativeLayout>

</com.liferay.mobile.screens.viewsets.defaultviews.ddl.form.fields.DDLFieldSelectView>