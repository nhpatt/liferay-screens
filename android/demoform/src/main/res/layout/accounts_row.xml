<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="?android:attr/selectableItemBackground"
	>

	<ImageView
		android:id="@+id/accounts_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginBottom="10dp"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="10dp"
		android:contentDescription="@string/list_icon"
		android:tint="@color/colorPrimary"
		style="@style/material_list_item_icon"
		/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@+id/accounts_icon"
		android:orientation="vertical"
		>

		<TextView
			android:id="@+id/liferay_list_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="14sp"
			/>

		<TextView
			android:id="@+id/liferay_list_subtitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="12sp"
			/>
	</LinearLayout>

	<TextView
		android:id="@+id/balance_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_marginRight="10dp"
		android:textColor="@color/colorPrimary"
		/>

</RelativeLayout>

